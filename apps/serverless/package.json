{
  "name": "@nighttrax/serverless",
  "description": "Example of using serverless in a TS monorepo",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "dev": "cross-env NODE_ENV=development sls offline start --stage offline",
    "tail-log": "sls logs -f app -t",
    "deploy": "cross-env NODE_ENV=production sls deploy --stage prod",
    "remove": "cross-env NODE_ENV=production sls remove --stage prod",
    "clean": "rimraf dist .webpack .serverless",
    "build": "tsc --noEmit --pretty"
  },
  "dependencies": {
    "express": "~4.18.1",
    "serverless-http": "~3.1.0",
    "@nighttrax/foo": "*"
  },
  "devDependencies": {
    "@types/express": "~4.17.15",
    "@types/node": "~18.11.0",
    "cross-env": "~7.0.3",
    "rimraf": "~3.0.2",
    "serverless": "~3.22.0",
    "serverless-bundle": "~5.4.0",
    "serverless-offline": "~9.2.5",
    "typescript": "~4.9.0"
  }
}
